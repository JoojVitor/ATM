@{
    ViewData["Title"] = "Saque";
}

@model Saque

<div class="text-center">
    <h1 class="display-4">Saque</h1>
    <div class="saque-container">
        @using (Html.BeginForm("CreateSaqueForm", "Home"))
        {
            @Html.LabelFor(o => o.Cartao.Numero)
            @Html.EditorFor(o => o.Cartao.Numero, new { htmlAttributes = new { @class = "form-control" } })

            @Html.LabelFor(o => o.Cartao.DataValidade)
            @Html.EditorFor(o => o.Cartao.DataValidade, new { htmlAttributes = new { @class = "form-control" } })

            @Html.LabelFor(o => o.Conta.Senha)
            @Html.EditorFor(o => o.Conta.Senha, new { htmlAttributes = new { @class = "form-control" } })

            <button class="btn btn-primary mt-4" type="submit">Enviar</button>
        }
    </div>
</div>



